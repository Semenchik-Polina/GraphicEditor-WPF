<Window x:Class="GraphicEditor.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicEditor"
        mc:Ignorable="d"
        Title="Settings" ResizeMode="NoResize" Height="350" Width="200" TextElement.FontSize="20px">
    <Grid>
        <StackPanel>
            <Label Name="LTheme"></Label>
            <RadioButton Name="RBGray" Checked="Gray_Checked"></RadioButton>
            <RadioButton Name="RBBlue" Checked="Blue_Checked"></RadioButton>
            <RadioButton Name="RBPink" Checked ="Pink_Checked"></RadioButton>
            <Label Name="LLanguage"></Label>
            <RadioButton Name="RBEnLang" Click="RBEnLang_Click"  VerticalAlignment="Bottom">English</RadioButton>
            <RadioButton Name="RBRuLang" Click="RBRuLang_Click"  VerticalAlignment="Bottom">Русский</RadioButton>
            <Button Name="BSave" Width="90" Click="Save_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
