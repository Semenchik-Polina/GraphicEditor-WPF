<Window x:Class="GraphicEditor.WCreateFigure"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicEditor"
        mc:Ignorable="d"
        Title="Create Figure" Height="250" Width="300" Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <Label Name="LNameEn"></Label>
            <TextBox Name="TBNameEn" TextChanged="TBName_TextChanged"/>
            <Label Name="LNameRu"></Label>
            <TextBox Name="TBNameRu" TextChanged="TBName_TextChanged"/>
            <Button Name="BAdd" Click="BAdd_Click" IsEnabled="False"></Button>
        </StackPanel>
    </Grid>
</Window>
